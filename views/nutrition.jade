extends layout
block content
  .container
    h1 Food Tracker
    p Track your food
  .container


    .row
      .col-lg-6
        .panel
          .panel-heading
            h4 Daily Limits
          ul.list-group.list-group-flush
            li.list-group-item
              ul.list-unstyled
                li
                  strong Empty Calories: 
                  span.label 200/300 kcal
                li
                  strong Total Calories: 
                  span.label.label-info 1500/2600 kcal
                li
                  .progress
                   .progress-bar(style='width: 10%; background-color: #999999;')
                     | 10 %
                   .progress-bar.progress-bar-info(style='width: 70%')
                     | 70 %
            li.list-group-item
              dl.dl-horizontal
                dt
                  | Oils: 
                  span.label(style='background-color: #dc4') 5/6 tsp
                dd
                  .progress
                    .progress-bar(style='width: 80%; background-color: #dc4')
                dt
                  | Saturated Fat: 
                  span.label(style='background-color: #f94') 13/22 g
                dd
                  .progress
                    .progress-bar(style='width: 50%; background-color: #f94')
                dt
                  | Sodium: 
                  span.label(style='background-color: #aaa;') 2039/2300 mg
                dd
                  .progress
                    .progress-bar(style='width: 90%; background-color: #aaa')
                
      .col-lg-6
        .panel
          .panel-heading
            h4.pull-left Daily Summary
            ul.nav.nav-pills.pull-right
              li.active
                a(href='#graphContent', data-toggle='tab') Graph
              li
                a(href='#dataContent', data-toggle='tab') Data
            .clearfix
          .tab-content
            .tab-pane.fade#graphContent
              #nutritionChart
            .tab-pane.fade#dataContent
              table.table.table-striped.table-bordered
                thead
                  th Food Groups
                  th Intake
                tbody
                  tr
                    td Grains
                    td 0 oz.
                  tr
                    td Vegetables
                    td 4 cup(s)
                  tr
                    td Fruits
                    td 2 cup(s)
                  tr
                    td Dairy
                    td 3 cup(s)
                  tr
                    td Protein
                    td 7 oz.
    .row
      .col-lg-4
        .panel
          .panel-heading
            h4 Food Selection
          .input-group
              input.form-control(type='text', placeholder='Enter Food')
              span.input-group-btn
                button.btn.btn-primary(type='button') Go!
          hr
          .list-group
            a.list-group-item.active
              p Egg, boiled
            a.list-group-item
              p Egg, porched
            a.list-group-item

      .col-lg-4
        .panel
          .panel-heading
            h4 Food Details
          h3 Egg, poached
          hr
          h4 Choose amount:
            form
              select
                  option(value='1') 1
                  option(value='2') 2
                  option(value='3') 3
                  option(value='4') 4
                  option(value='5') 5
                select
                  option(value='1') small
                  option(value='2') medium
                  option(value='3') large
                  option(value='4') extra large
          h4 Choose meal time:
          form(style='overflow:hidden;')
            label.checkbox-inline
              input(type='checkbox')
              | Breakfast
            label.checkbox-inline
              input(type='checkbox')
              | Lunch
            label.checkbox-inline
              input(type='checkbox')
              | Dinner
            label.checkbox-inline
              input(type='checkbox')
              | Snacks
            br
            .btn-group.pull-right(style='margin-top:10px')
              button.btn.btn-primary
                | Add 
                span.icon-plus
              button.btn.btn-default 
                | Clear 
                span.icon-remove
          hr
          ul.nav.nav-tabs
            li.active
              a(href='#food-info', data-toggle='tab') Food Info
            li
              a(href='#nutrient-info', data-toggle='tab') Nutrient Info
          .tab-content
            .tab-pane#nutrient-info
               table.table.table-striped.table-bordered
                 thead
                   tr
                     th
                      strong Nutrient
                     th
                      strong Amount
                     th
                      strong % of Daily Target
                 tbody
                  tr
                   td Calories
                   td 77
                   td 4%
                  tr
                   td Protein
                   td 6 g
                   td 14% target
                  tr
                   td Dietary Fiber
                   td 0 g
                   td No limit
                  tr
                   td Total Fat
                   td 5 g
                   td No limit
                  tr#collapseNutrition.collapse.collapsed
                   td Saturated Fat
                   td 2 g
                   td 7% limit
                a.accordion-toggle(data-toggle='collapse', data-parent='accordion3', href='#collapseNutrition')
                  p.text-center More
                    i.caret
            .tab-pane.active#food-info
                h3
                  | &nbsp;
                  span.label.label-info 77 Calories
                table.table
                  thead
                    tr
                      th
                        strong Food Groups
                      th
                        strong Limits
                  tbody
                    tr
                      td
                      td
                      td
                
      .col-lg-4
        .panel
          .panel-heading
            h4 Meals
              span.label.label-info.pull-right 1000 Calories
          .scrollDiv
           .accordion.accordion2
             .accordion-group
               .accordion-heading
                 a.accordion-toggle(data-toggle='collapse', data-parent='accordion2', href='#collapseBreakfast')
                   | Breakfast
                   span.label.pull-right 200 Calories
               .accordion-body.collapse.collapsed#collapseBreakfast
                 .accordion-inner
                   #contentBreakfast
                     ul.list-group.list-group-flush(style='padding-bottom: 10px;')
                       li.list-group-item
                         p Egg
                           span.label.pull-right 77 Calories
                            br 
                            | (22 Empty Calories)
                         small 1 large egg(s)
                         br
                         .btn-group.pull-right
                           a.btn.btn-link.btn-small(href='#')
                             i.icon-bookmark
                             | Favorite
                           a.btn.btn-link.btn-small(href='#')
                             i.icon-edit
                             | Edit
                           a.btn.btn-link.btn-small(href='#')
                             i.icon-remove
                             | Remove
                         .clearfix
                        li.list-group-item
                         p Milk
                           span.label.pull-right 120 Calories
                            br 
                            | (22 Empty Calories)
                         small 200 ml
                         br
                         .btn-group.pull-right
                           a.btn.btn-link.btn-small(href='#')
                             i.icon-bookmark
                             | Favorite
                           a.btn.btn-link.btn-small(href='#')
                             i.icon-edit
                             | Edit
                           a.btn.btn-link.btn-small(href='#')
                             i.icon-remove
                             | Remove
                         .clearfix
             .accordion-group
               .accordion-heading
                 a.accordion-toggle(data-toggle='collapse', data-parent='accordion2', href='#collapseLunch')
                   | Lunch
                   span.label.pull-right 0 Calories
               .accordion-body.collapse.collapsed#collapseLunch
                 .accordion-inner
                   #contentLunch
             .accordion-group
               .accordion-heading
                   a.accordion-toggle(data-toggle='collapse', data-parent='accordion2', href='#collapseDinner')
                    | Dinner
                    span.label.pull-right 0 Calories
               .accordion-body.collapse.collapsed#collapseDinner
                 .accordion-inner
                   #contentDinner
             .accordion-group
               .accordion-heading
                 a.accordion-toggle(data-toggle='collapse', data-parent='accordion2', href='#collapseSnacks')
                   | Snacks
                   span.label.pull-right 0 Calories
               .accordion-body.collapse.collapsed#collapseSnacks
                 .accordion-inner
                   #contentSnacks